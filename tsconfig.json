{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "noEmit": false,
        "lib": [
            "ESNext",
            "DOM",
            "ESNext.Promise"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}